<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/stackCategoryText"
        android:layout_width="333dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:text="[Stack Category]"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/techNameText"
        android:layout_width="334dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:text="[Tech Name]"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stackCategoryText" />

    <TextView
        android:id="@+id/typeOfTechText"
        android:layout_width="335dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="Type: [Framework]"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/techNameText" />

    <TextView
        android:id="@+id/techTagText"
        android:layout_width="334dp"
        android:layout_height="66dp"
        android:layout_marginTop="5dp"
        android:text="Tags: [Framework]"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeOfTechText" />
</androidx.constraintlayout.widget.ConstraintLayout>