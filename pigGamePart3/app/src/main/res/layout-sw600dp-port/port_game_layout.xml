<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/second_fragment"
        android:name="com.example.piggameapp.GameScreenFragment"
        android:layout_width="610dp"
        android:layout_height="589dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/game_screen_fragment" />

    <fragment
        android:id="@+id/first_fragment"
        android:name="com.example.piggameapp.TitleScreenFragment"
        android:layout_width="641dp"
        android:layout_height="500dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/second_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/title_screen_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>