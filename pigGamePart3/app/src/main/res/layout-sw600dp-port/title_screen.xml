<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/title_fragment"
        android:name="com.example.piggameapp.TitleScreenFragment"
        android:layout_width="641dp"
        android:layout_height="758dp"
        android:layout_marginTop="320dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/title_screen_fragment" />

    <fragment
        android:id="@+id/game_fragment"
        android:name="com.example.piggameapp.GameScreenFragment"
        android:layout_width="608dp"
        android:layout_height="590dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/game_screen_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>