<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="375dp"
        android:layout_height="450dp"
        android:background="#2196F3"
        tools:layout_editor_absoluteX="365dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/player1UsernameTextEntry"
        android:layout_width="232dp"
        android:layout_height="39dp"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/player1_Label"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="@string/username_placeholder_text"
        android:textColor="#2196F3"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/player1_Label2"
        tools:layout_editor_absoluteX="414dp" />

    <TextView
        android:id="@+id/player1_Label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="@string/player1_Label"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2196F3"
        android:textColorLink="#FFFFFF"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="414dp" />

    <TextView
        android:id="@+id/player2_Label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="@string/player2_Label"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2196F3"
        android:textColorLink="#FFFFFF"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/player1UsernameTextEntry"
        tools:layout_editor_absoluteX="414dp" />

    <EditText
        android:id="@+id/player2UsernameTextEntry2"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/player1_Label"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="@string/username_placeholder_text"
        android:textColor="#2196F3"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/player2_Label2"
        tools:layout_editor_absoluteX="414dp" />

    <Button
        android:id="@+id/newGame_Button2"
        android:layout_width="146dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:text="@string/newGame_Button"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="414dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="304dp"
        android:layout_height="123dp"
        android:text="This pig game is played using an 8-sided die that can be rolled as many times as you wish. However, if you happen to roll an 8, your turn ends automatically AND you lose all of your accumulated points; the other player would then take their turn. A player wins by reaching the determined points limit."
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="192dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:text="How to Play"
        android:textAlignment="center"
        android:textColor="#FF2196F3"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="298dp"
        android:layout_height="68dp"
        android:ems="10"
        android:lineSpacingExtra="5sp"
        android:text="Enter Player Usernames Below to Begin"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="414dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="307dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:text="Or, if you are feeling anti-social, enable the AI in settings to play against the computer."
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="414dp" />

</androidx.constraintlayout.widget.ConstraintLayout>